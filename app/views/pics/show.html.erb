<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @pic.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @pic.price %>
</p>

<!-- 追加箇所 開始 -->
<p>
  <strong>Image:</strong>
  <% if @pic.image? %>
    <div class="thumbnail">
      <%= image_tag @pic.image.url %>
    </div>
  <% end %>
</p>
<!-- 追加箇所 終了 -->

